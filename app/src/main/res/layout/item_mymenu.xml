<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_store_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mymenu_item_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/chicken"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/mymenu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핫황금올리브치킨 크리스피"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/mymenu_item_img"
                app:layout_constraintStart_toEndOf="@id/mymenu_item_img"/>

            <TextView
                android:id="@+id/mymenu_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,000원"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/mymenu_item_name"
                app:layout_constraintStart_toStartOf="@id/mymenu_item_name"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/mymenu_item_price"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/mymenu_delete_tv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_delete"/>

                    <TextView
                        android:id="@+id/mymenu_count_tv"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        app:layout_constraintStart_toEndOf="@id/mymenu_delete_tv"
                        app:layout_constraintTop_toTopOf="@id/mymenu_delete_tv"
                        app:layout_constraintBottom_toBottomOf="@id/mymenu_delete_tv"/>

                    <ImageButton
                        android:id="@+id/mymenu_add_tv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_add"
                        app:layout_constraintTop_toTopOf="@id/mymenu_delete_tv"
                        app:layout_constraintBottom_toBottomOf="@id/mymenu_delete_tv"
                        app:layout_constraintStart_toEndOf="@id/mymenu_count_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/item_store_ll"
        />


</androidx.constraintlayout.widget.ConstraintLayout>