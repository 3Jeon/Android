<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_store_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/menu_item_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="21dp"
                android:text="핫황금올리브치킨 크리스피"
                android:textColor="@color/black"
                android:textSize="19dp"
                app:layout_constraintStart_toEndOf="@+id/menu_item_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menu_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="20,000원"
                android:textColor="@color/black"
                android:textSize="19dp"
                app:layout_constraintStart_toStartOf="@+id/menu_item_name"
                app:layout_constraintTop_toBottomOf="@+id/menu_item_name" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/number_button"
                android:text="-"
                android:textColor="#ADADADAD"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/plus_btn"
                app:layout_constraintTop_toTopOf="@+id/plus_btn"
                tools:layout_editor_absoluteX="333dp" />

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/number_button"
                android:text="+"
                android:textColor="#ADADADAD"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/menu_number"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:background="@drawable/number_button"
                android:gravity="center"
                android:text="1"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/plus_btn"
                app:layout_constraintEnd_toStartOf="@+id/plus_btn"
                app:layout_constraintStart_toEndOf="@+id/minus_btn"
                app:layout_constraintTop_toTopOf="@+id/plus_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/item_store_ll"
        />

</androidx.constraintlayout.widget.ConstraintLayout>